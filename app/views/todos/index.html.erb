<p style="color: green"><%= notice %></p>

<div class="container">

  <div class="mx-auto w-50">
    <%= render "form", todo: Todo.new %>


    <div id="todos" class="mt-4">
    <h1>Todos</h1>
      <% @todos.each do |todo| %>
        <%= render todo %>
        <p>
          <%= link_to "Show this todo", todo %>
        </p>
      <% end %>
    </div>

    <%= link_to "New todo", new_todo_path %>
  </div>

</div>
